                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <i class="fa fa-edit" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;<a data-toggle="collapse" data-parent="#accordion" href="#collapse1">เปลี่ยนชื่อกลุ่มผู้ใช้</a>
                                </h4>
                            </div>
                            <div id="collapse1" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <form style="width:250px;margin-left:10px;margin-right:10px;">
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-sitemap">&nbsp;</i>
                                            </span>
                                            <input id="rolename" type="text" class="form-control" placeholder="ชื่อกลุ่มผู้ใช้ใหม่" autocomplete="off" maxlength="100" onkeyup="$('#rolenameMsg').text(''); $('#rolenameMsg').hide();" />
                                        </div>
                                        <span id="rolenameMsg" class="text-danger" style="display:none;margin-top:-45px;margin-left:270px;position:absolute"></span>
                                        <button type="button" id="btnChangeRoleName" onclick="roleChangeName();" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-save " aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;บันทึก&nbsp;&nbsp;&nbsp;</button>
                                        <br />
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <i class="fa fa-edit" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;<a data-toggle="collapse" data-parent="#accordion" href="#collapse2">กำหนดสิทธิ</a>
                                </h4>
                            </div>
                            <div id="collapse2" class="panel-collapse collapse">
                                <div class="panel-body">
                                    test
                                    aaaa
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <i class="fa fa-eraser" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;<a data-toggle="collapse" data-parent="#accordion" href="#collapse3" style="color:red">ลบกลุ่มผู้ใช้</a>
                                </h4>
                            </div>
                            <div id="collapse3" class="panel-collapse collapse">
                                <div class="panel-body">
                                    กลุ่มผู้ใช้ สามารลบได้เมื่อไม่มีผู้ใช้อยู่ในกลุ่มเท่านั้น

                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#collapse3"></h4>
                            </div>
                            <div id="collapse4" class="panel-collapse collapse">
                                <div class="panel-body"></div>
                            </div>
                        </div>

                        <br />
                    </div>


                    <br /><br />
            </div>
            @*<div style="margin-left:370px;margin-top:-158px;margin-right:20px;position:absolute;"></div>*@

            </div>
    </div>



</div>

<!-- Modal -->
<div class="modal fade modalForm1" id="a_modal" tabindex="-1" role="dialog" aria-labelledby="a_label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="a_header" class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="vertical-align:middle;top:15px">&times;</button>
                <h4 class="modal-title" id="a_label" style="vertical-align:middle;"></h4>
            </div>
            <div class="modal-body container-fluid">
                <div id="a_body"></div>
                <br /><br />
                <div class="pull-right" style="margin-top:-2px;">
                    <div class="btn btn-default btn-panel-yellow" data-dismiss="modal" aria-hidden="true">&nbsp;&nbsp;&nbsp;ปิด&nbsp;&nbsp;&nbsp;</div>
                </div>
            </div>

        </div>

    </div>


</div>
<!-- /Modal -->

<!-- Modal confirm -->
<div id="c_modal" class="modal fade modalForm1" tabindex="-1" role="dialog" aria-labelledby="confirm_Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="c_header" class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="vertical-align:middle;top:15px">&times;</button>
                <h4 class="modal-title" id="c_Label" style="vertical-align:middle;">ยืนยันการรีเซตรหัสผ่าน</h4>
            </div>
            <div class="modal-body container-fluid">
                <div id="c_memberId" style="display:none"></div>
                <div>ยืนยันการรีเซตรหัสผ่าน?</div>
                <br/>
                <div>ชื่อผู้ใช้: <span id="c_uname" style="color:red"></span></div><br/>
                <div>อีเมล: <span id="c_email" style="color:red"></span></div><br />
                <hr/>
                <div class="row">
                    <div class="col-md-4"><button id="btnConfirm" class="btn btn-panel-yellow pull-right" onclick="resetPassword();">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;ยืนยัน&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button></div>
                    <div class="col-md-4 col-md-offset-4">
                        <button id="btnCancel" class="btn btn-default" data-dismiss="modal">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;ยกเลิก&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Modal confirm -->

@section Scripts {
    <script src="~/lib/bootstrap/js/modal.js"></script>
    <script>
        $(document).ready(function () {

        });
        function roleChangeName() {
            if ($('#rolename').val().trim()) {

                $.ajax({
                    async: true,
                    type: "POST",
                    url: "@Url.Action("SecurityCreateUser", "members")",
                    data: {
                    roleId: $('#uRoleId').val(),
                    uname: $('#uname').val(),
                    email: $('#email').val(),
                        //upwd: $('#upwd').val(),
                    },
                success: function (data) {
                    if (data.result == "dup") {
                        $('#a_label').text('ตรวจพบชื่อผู้ใช้ซ้ำ');
                        $('#a_body').text('ตรวจพบชื่อผู้ใช้ซ้ำ กรุณาลองใหม่');
                        $('#a_modal').modal({ backdrop: 'static', keyboard: false });
                    } else if (data.result == "success") {
                        $('#uname').val(''); //$('#upwd').val(''); $('#upwdrepeat').val('');
                        $('#email').val('');
                        aUserTable($('#uRoleId').val());
                    } else {
                        $('#a_label').text('ตรวจพบความผิดพลาด');
                        $('#a_body').text('ตรวจพบความผิดพลาด กรุณาติดต่อผู้ดูแลระบบ');
                        $('#a_modal').modal({ backdrop: 'static', keyboard: false });
                    }
                }
            });
            } else {
                $('#rolenameMsg').text('กรุณากรอกข้อมูล'); $('#rolenameMsg').show();
                console.log('test');
            }


        }

        function aUserForm(utype, rname) {
            $('#rolename').text(rname);
            $('#userTitle').html('เพิ่มผู้ใช้ใหม่ กลุ่ม ' + rname);
            $('#btnCreate').html('&nbsp;<i class="fa fa-plus-square " aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;เพิ่มผู้ใช้กลุ่ม ' + rname + '&nbsp;&nbsp;&nbsp;');
            if (utype > 3) {
                $('#btnCreate').show();
                $('#colorbar').removeClass().addClass('bg-color-orange');
                $('#formcolorbar').removeClass().addClass('bg-color-orange');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_'+utype).removeClass().addClass('bg-color-orange');
            } else if (utype == 3) {
                $('#btnCreate').hide();
                $('#colorbar').removeClass().addClass('bg-color-green');
                $('#formcolorbar').removeClass().addClass('bg-color-green');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_' + utype).removeClass().addClass('bg-color-green');
            } else if (utype == 2) {
                $('#btnCreate').show();
                $('#colorbar').removeClass().addClass('bg-color-blue');
                $('#formcolorbar').removeClass().addClass('bg-color-blue');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_' + utype).removeClass().addClass('bg-color-blue');
            } else if (utype == 1) {
                $('#btnCreate').show();
                $('#colorbar').removeClass().addClass('bg-color-black');
                $('#formcolorbar').removeClass().addClass('bg-color-black');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_' + utype).removeClass().addClass('bg-color-black');
            }
        }
        function createUser() {
            $('#uname').val($('#uname').val().trim()); $('#email').val($('#email').val().trim());
            //$('#upwd').val($('#upwd').val().trim()); $('#upwdrepeat').val($('#upwdrepeat').val().trim());
            //if ($('#uname').val() && $('#email').val() && $('#upwd').val() && $('#upwdrepeat').val()) {
            if ($('#uname').val() && $('#email').val()) {
                //if ($('#upwd').val() == $('#upwdrepeat').val()) {
                    $.ajax({
                        async: true,
                        type: "POST",
                        url: "@Url.Action("SecurityCreateUser", "members")",
                        data: {
                            roleId: $('#uRoleId').val(),
                            uname: $('#uname').val(),
                            email: $('#email').val(),
                            //upwd: $('#upwd').val(),
                        },
                        success: function (data) {
                            if (data.result == "dup") {
                                $('#a_label').text('ตรวจพบชื่อผู้ใช้ซ้ำ');
                                $('#a_body').text('ตรวจพบชื่อผู้ใช้ซ้ำ กรุณาลองใหม่');
                                $('#a_modal').modal({ backdrop: 'static', keyboard: false });
                            } else if (data.result == "success") {
                                $('#uname').val(''); //$('#upwd').val(''); $('#upwdrepeat').val('');
                                $('#email').val('');
                                aUserTable($('#uRoleId').val());
                            } else {
                                $('#a_label').text('ตรวจพบความผิดพลาด');
                                $('#a_body').text('ตรวจพบความผิดพลาด กรุณาติดต่อผู้ดูแลระบบ');
                                $('#a_modal').modal({ backdrop: 'static', keyboard: false });
                            }
                        }
                    });
                //} else {
                //    $('#a_label').text('กรุณาป้อนรหัสผ่าน');
                //    $('#a_body').text('รหัสผ่านไม่ตรงกัน กรุณาป้อนใหม่อีกครั้ง');
                //    $('#a_modal').modal({ backdrop: 'static', keyboard: false });
                //}

            } else {
                $('#a_label').text('กรุณากรอกข้อมูล');
                $('#a_body').text('กรุณากรอกข้อมูลให้ครบถ้วน');
                $('#a_modal').modal({ backdrop: 'static', keyboard: false });
            }
        }

        function suspendClick(id) {
            if (!$('#status-' + id).hasClass("btn-panel-green-attended")) {
                suspend(id,'Y');
                $('#status-' + id).html("&nbsp;<i class='fa fa-check-square-o' aria-hidden='true'></i> ใช้งาน&nbsp;");
                $('#status-' + id).removeClass('btn-panel-red').addClass('btn-panel-green-attended');
            } else {
                suspend(id, 'N');
                $('#status-' + id).html("<i class='fa fa-square-o' aria-hidden='true'></i> ระงับการใช้งาน");
                $('#status-' + id).removeClass('btn-panel-green-attended').addClass('btn-panel-red');
            }

        }
        function suspend(id, status) {
            $.ajax({
                async: true,
                type: "POST",
                url: "@Url.Action("Suspend", "SecurityMemberRoles")",
                data: {
                    id: id, status: status
                },
                success: function (data) {
                    aUserTable($('#uRoleId').val());
                }
            });
        }
        function resetPasswordClick(id,uname,email) {
            $('#c_memberId').text(id);
            $('#c_uname').text(uname); $('#c_email').text(email);
            $('#c_modal').modal({ backdrop: 'static', keyboard: false });
        }
        function resetPassword(id) {
            $.ajax({
                async: true,
                type: "POST",
                url: "@Url.Action("ResetPwd", "Home")",
                data: {
                    id: $('#c_memberId').text()
                },
                success: function (data) {
                    aUserTable($('#uRoleId').val());
                    $('#c_modal').modal('hide');
                }
            });
        }
    </script>
}
