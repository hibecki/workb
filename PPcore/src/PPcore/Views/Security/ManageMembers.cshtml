        function isInputEmpty() {
            var isEmpty = false;
            if ($('#topic').val()) {
                $('#topic-msg').hide(); isEmpty = false;
            } else {
                $('#topic-msg').show(); isEmpty = true;
            }
            if ($('#content').val()) {
                $('#content-msg').hide(); isEmpty = false;
            } else {
                $('#content-msg').show(); isEmpty = true;
            }
            return isEmpty;
        }
        function aRoleMenu() {
            $.ajax({
                type: 'get', url: '@Url.Action("DetailsAsRoleMenu", "SecurityRoles")',
            }).done(function (resp) {
                $('#aRoleMenu').html(resp);
                $('#utype').val(3);
                aUserForm(3, 'Members');
            });
        }
        function aUserTable(roleId) {
            $.ajax({
                type: 'get', url: '@Url.Action("DetailsAsTableSecurity", "members")' + '?roleId=' + roleId,
            }).done(function (resp) {
                $('#memberBody').html(resp);
                var w = [
                    { "targets": [0], "width": "180", "className": "dt-center" },
                    { "targets": [1], "visible": false, "searchable": false },
                    { "targets": [2], "className": "dt-center" },
                    { "targets": [3], "width": "120", "className": "dt-center" },
                    { "targets": [4], "width": "120", "className": "dt-center" },
                    { "targets": [5], "width": "120", "className": "dt-center" },
                    { "targets": [6], "width": "120", "className": "dt-center" },
                    { "targets": [7], "width": "120", "className": "dt-center" },
                    { "targets": [8], "width": "100", "className": "dt-center" },
                    { "targets": [9], "width": "100", "className": "dt-center" },
                ];
                var table = setTable_default($('#a_table'), w);
                table.$('tr:first').click();
            });
        }
        function aUserForm(utype, rname) {
            $('#rolename').text(rname);
            $('#userTitle').html('เพิ่มผู้ใช้ใหม่กลุ่ม ' + rname);
            $('#btnCreate').html('&nbsp;<i class="fa fa-plus-square " aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;เพิ่มผู้ใช้กลุ่ม ' + rname + '&nbsp;&nbsp;&nbsp;');
            if (utype > 3) {
                $('#btnCreate').show();
                $('#colorbar').removeClass().addClass('bg-color-orange');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_'+utype).removeClass().addClass('bg-color-orange');
            } else if (utype == 3) {
                $('#btnCreate').hide();
                $('#colorbar').removeClass().addClass('bg-color-green');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_' + utype).removeClass().addClass('bg-color-green');
            } else if (utype == 2) {
                $('#btnCreate').show();
                $('#colorbar').removeClass().addClass('bg-color-blue');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_' + utype).removeClass().addClass('bg-color-blue');
            } else if (utype == 1) {
                $('#btnCreate').show();
                $('#colorbar').removeClass().addClass('bg-color-black');
                $('#bar_' + $('#utype').val()).removeClass();
                $('#bar_' + utype).removeClass().addClass('bg-color-black');
            }
            $('#utype').val(utype);
        }
