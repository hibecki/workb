@{
    Layout = "";
}
@model IEnumerable<PPcore.Models.course_type>

<div class="panel panel-blue">
    <div class="panel-heading">
        <div class="pull-left" style="padding-top:5px;">ประเภทหลักสูตร</div>
        <div class="pull-right" style="margin-top:-2px;">
            <div id="btnCreateCourseType" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-file" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;&nbsp;เพิ่ม&nbsp;&nbsp;&nbsp;&nbsp;</div>
            <div id="btnEditCourseType" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-pencil-square-o" aria-hidden="true" style="color:white;"></i>&nbsp;แก้ไข&nbsp;&nbsp;</div>
            <div id="btnDeleteCourseType" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-eraser" aria-hidden="true" style="color:white;"></i>&nbsp;ลบ&nbsp;&nbsp;</div>
        </div>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper" style="padding-right:10px;">
            <table class="table table-striped table-bordered table-hover dataTablesMod" id="course_typeDetailsAsTableList">
                <thead>
                    <tr>
                        <th style="width:15px;">ลำดับ</th>
                        <th style="display:none">@Html.DisplayNameFor(model => model.id)</th>
                        <th style="width:150px;">@Html.DisplayNameFor(model => model.ctype_code)</th>
                        <th>@Html.DisplayNameFor(model => model.ctype_desc)</th>
                        <th style="width:50px;">@Html.DisplayNameFor(model => model.x_status)</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var countOrder = 0;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:15px;">
                                @countOrder
                            </td>
                            <td style="display:none">@Html.DisplayFor(modelItem => item.id)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ctype_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ctype_desc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.x_status)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
</div>
