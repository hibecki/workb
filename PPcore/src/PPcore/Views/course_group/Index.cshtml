@model IEnumerable<PPcore.Models.course_group>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12" style="padding-top:15px;">
            <table><tr><td><h4 class="txt-color-blue">ข้อมูลสมาชิก</h4></td></tr></table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-blue">
                <div class="panel-heading">
                    <div class="pull-left" style="padding-top:5px;">แสดงข้อมูลทั้งหมด</div>
                    <div class="pull-right" style="margin-top:-2px;">
                        <button class="btn btn-default btn-panel-yellow" onclick="location.href='@Url.Action("Create", "course_group")'">&nbsp;<i class="fa fa-file" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;&nbsp;เพิ่ม&nbsp;&nbsp;&nbsp;&nbsp;</button>
                        <button id="btnEdit" class="btn btn-default btn-panel-yellow" onclick="location.href='@Url.Action("Edit", "course_group")'">&nbsp;<i class="fa fa-pencil-square-o" aria-hidden="true" style="color:white;"></i>&nbsp;แก้ไข&nbsp;&nbsp;</button>
                        <button id="btnDetails" class="btn btn-default btn-panel-yellow" onclick="location.href='@Url.Action("Details", "course_group")'">&nbsp;<i class="fa fa-file-text" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;ดูข้อมูล</button>
                    </div>
                </div>

                <!-- /.panel-heading -->
                <div style="position:absolute;left:250px;top:70px;"><span class="badge">จำนวนรายการทั้งหมด @ViewBag.countRecords รายการ</span></div>
                <div class="panel-body">
                    <div class="dataTable_wrapper" style="padding-right:10px;">
                        <table class="table table-striped table-bordered table-hover" id="dataTablesMembers">
                            <thead>
                                <tr>
                                    <th>ลำดับ</th>
                                    <th style="display:none">@Html.DisplayNameFor(model => model.id)</th>
                                    <th style="width:50px;">@Html.DisplayNameFor(model => model.cgroup_code)</th>
                                    <th style="width:150px;">@Html.DisplayNameFor(model => model.cgroup_desc)</th>
                                    <th style="width:50px;">@Html.DisplayNameFor(model => model.x_status)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var countOrder = 0;}
                                @foreach (var item in Model)
                                {
                                    countOrder++;
                                    <tr>
                                        <td>
                                            @countOrder
                                        </td>
                                        <td style="display:none">@Html.DisplayFor(modelItem => item.id)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cgroup_code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cgroup_desc)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.x_status)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>




                    </div>
                </div>
                <!-- /.panel-body -->
            </div>

            <!-- /.panel -->
        </div>
        <!-- /.col-lg-8 -->
    </div>

</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var tableMember = setTableMembers($('#dataTablesMembers'))
            tableMember.$('tr:first').click();
            $('#btnEdit').on('click', function () {
                var data = tableMember.row('.selected').data();
                var url = '@Url.Action("Edit", "members", new { id = "__id__" })';
                window.location.href = url.replace('__id__', data[1]);
            });

            $('#btnDetails').on('click', function () {
                var data = tableMember.row('.selected').data();
                var url = '@Url.Action("Details", "members", new { id = "__id__" })';
                window.location.href = url.replace('__id__', data[1]);
            });

            $('#btnPrint').on('click', function () {
                var data = tableMember.row('.selected').data();
                var url = '@Url.Action("DetailsPdf", "members", new { id = "__id__" })';
                //window.location.href = url.replace('__id__', data[1]);
                var win = window.open(url.replace('__id__', data[1]), '_blank');
                //var win = window.open(url.replace('__id__', data[1]));
                win.focus();
            });
        });
    </script>
}
